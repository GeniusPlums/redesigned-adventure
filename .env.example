# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/laudspeaker
DATABASE_SSL=true

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_USERNAME=default

# Clickhouse Configuration
CLICKHOUSE_HOST=localhost
CLICKHOUSE_PORT=8123
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=your_clickhouse_password
CLICKHOUSE_DB=default

# MongoDB Configuration
MONGODB_URI=mongodb://user:password@localhost:27017/laudspeaker

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=laudspeaker-client
KAFKA_GROUP_ID=laudspeaker-consumer-group

# Application Configuration
NODE_ENV=production
JOURNEY_ONBOARDING=true
SYNCHRONIZE=true
PORT=3001

# Frontend Configuration
REACT_APP_API_BASE_URL=http://localhost:3001
REACT_APP_WS_BASE_URL=ws://localhost:3001

# Sentry Configuration
BACKEND_SENTRY_AUTH_TOKEN=your_backend_sentry_token
FRONTEND_SENTRY_AUTH_TOKEN=your_frontend_sentry_token
